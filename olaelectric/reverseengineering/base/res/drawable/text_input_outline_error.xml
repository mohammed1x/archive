<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edittext_grey_background_color" />
            <stroke android:width="@dimen/dp_2" android:color="@color/red_edittext_border" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edittext_grey_background_color" />
            <stroke android:width="@dimen/dp_2" android:color="@color/edittext_grey_background_color" />
        </shape>
    </item>
</selector>
